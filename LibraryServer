package Server;

import java.io.*;
import java.net.*;

public class LibraryServer {
    private static final int PORT = 5000;
    private static final String DATA_FILE = "data/books.txt";  // âœ… thÃªm háº±ng sá»‘ Ä‘Æ°á»ng dáº«n file

    public static void main(String[] args) {
        // âœ… táº¡o LibraryData dÃ¹ng chung cho táº¥t cáº£ client
        LibraryData libraryData = new LibraryData(DATA_FILE);

        try (ServerSocket serverSocket = new ServerSocket(PORT)) {
            System.out.println("âœ… Library Server Ä‘ang cháº¡y trÃªn cá»•ng " + PORT);

            while (true) {
                Socket clientSocket = serverSocket.accept();
                System.out.println("ğŸ”— Client káº¿t ná»‘i: " + clientSocket);
                // âœ… truyá»n libraryData vÃ o ClientHandler
                new Thread(new ClientHandler(clientSocket, libraryData)).start();
            }
        } catch (IOException e) {
            e.printStackTrace();
        }
    }
}
